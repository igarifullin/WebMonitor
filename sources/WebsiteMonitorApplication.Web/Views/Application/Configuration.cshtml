@using WebsiteMonitorApplication.Web.Models.ApplicationViewModels
@model ConfigurationViewModel
@{
    ViewData["Title"] = "Configuration";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Interval between applications checks: @Model.Minutes</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Minutes"></label>
                <input asp-for="Minutes" class="form-control" />
                <span asp-validation-for="Minutes" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Change</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
